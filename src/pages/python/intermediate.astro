---
import Layout from "../../layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
const projects = await getCollection('intermediatePython')
import ProjectCard from "../../components/ProjectCard.astro";
import { getCollection } from "astro:content";


---
<Layout title="Intermediate">
    <main>
        <h1 class="text-white text-center font-thin text-2xl">Intermediate Python Projects</h1>
        <p class="text-white font-thin text-lg px-20 py-10">slightly more advanced stuff</p>
        <ul role="list" class="grid gap-4 place-items-stretch grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-5 md:px-20">
            {projects.map((c) =>
            
            <ProjectCard
            href={`https://github.com/thisisnich/dibzzpython/blob/main/beginner/${c.data.file_name}`}
            title={c.data.title}
            body={c.data.body}
            sameTab ={c.data.sameTab? true : false}
            />)}
        </ul>
    </main>
</Layout>