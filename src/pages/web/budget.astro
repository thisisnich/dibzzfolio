// convex/schema.js
import { defineSchema, defineTable, s } from "convex/schema";

export default defineSchema({
  transactions: defineTable({
    userId: s.string(),
    date: s.string(),
    category: s.string(),
    amount: s.number(),
    description: s.string(),
    createdAt: s.number(),
  }).index("by_user", ["userId"]),
  
