---
import Layout from "../../layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
const projects = await getCollection('intermediateWeb') as CollectionEntry<'intermediateWeb'>[];
import ProjectCard from "../../components/ProjectCard.astro";
import { getCollection } from "astro:content";
---
<Layout title = "Intermediate">
    <main>
        
        <h1 class="text-white text-center font-thin text-2xl">Welcome to my web projects</h1>
        <p class="text-white font-thin text-lg px-20 py-10">I do stuff in with react and some backend services</p>
        <ul role="list" class="grid gap-4 place-items-stretch grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-5 md:px-20">
            {projects.map((c) =>
            
            <ProjectCard
            sameTab ={c.data.sameTab? true : false}
            href={c.data.URL}
            title={c.data.title}
            body={c.data.body} />)}
        </ul>

    </main>
</Layout>