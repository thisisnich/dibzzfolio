    <script is:inline>
        function generatePdf() {
            const element = document.querySelector('.resume-container');
            var opt = {
                margin: 0, /* Remove all margins */
                filename: 'Nicholas_Dubs_Resume.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: {
                    scale: 2, /* Increased scale for better resolution */
                    useCORS: true, /* For images from external sources */
                    allowTaint: true, /* Allows cross-origin images to be rendered */
                    foreignObjectRendering: true /* Improves rendering of complex CSS */
                },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
                pagebreak: { mode: 'css' } /* Use CSS page-break properties for control */
            };
            html2pdf().from(element).set(opt).save();
        }
    </script>
